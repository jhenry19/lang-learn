---
export interface Props {
	placeholderText: string;
	
}

const { placeholderText } = Astro.props;
---

<input type="text" placeholder={placeholderText}>

<style>
    input {
        width: 75%;
        height: 75%;
        padding: 9px;
        font-size: 14px;
        border-width: 1px;
        border-color: #CCCCCC;
        background-color: #FFFFFF;
        color: #000000;
        border-style: solid;
        border-radius: 6px;
        box-shadow: 0px 0px 5px rgba(66,66,66,.75);
    }
</style>


